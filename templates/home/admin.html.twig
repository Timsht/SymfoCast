{% extends 'home/layout.html.twig' %}

{% block title %}Admin{% endblock %}

{% block content %}
	<h1>Admin</h1>

	<table>
		<thead>
			<tr>
				<th>User id</th>
				<th>User email</th>
				<th>User role</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles|json_encode() }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}